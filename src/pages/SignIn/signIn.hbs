<div class='sign-in-page'>
  <div class='double-container'>
    <div class='sign-in-form'>
      <h1 class='sign-in-form__title'>
        Welcome back!
      </h1>
      <div class='sign-in-form__content'>
        <div>
          <label for='signUpUsername' class='base-input-label'>Username</label>
          <input id='signUpUsername' name='username' class='base-input-root' />
        </div>
        <div>
          <label for='signUpPassword' class='base-input-label'>Password</label>
          <input
            id='signUpPassword'
            type='password'
            name='password'
            class='base-input-root'
          />
        </div>
        {{>baseButton text="Sign In"}}
        <div>
          Do not have an account?
          <a>Sign up.</a>
        </div>
      </div>
    </div>
  </div>
</div>